ENV=local

# Admin password for login
ADMIN_PASSWORD=change-me-in-production

# Session secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=change-me-session-secret

# LinkedIn OAuth (from https://www.linkedin.com/developers/apps)
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# Fernet key for token encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=generate-a-fernet-key

# AI provider: "openai" or "anthropic"
AI_PROVIDER=anthropic
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# MongoDB (auto-configured in docker-compose, override for external)
# MONGO_CONNECTION_STRING=mongodb://admin:password123@localhost:27018/linkedin_autoposter?authSource=admin
